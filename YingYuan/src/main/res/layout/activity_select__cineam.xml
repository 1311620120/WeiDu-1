<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bw.movie.activity.Select_CineamActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300">

        <ImageView
            android:src="@mipmap/banner_bg"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_100"
            android:layout_weight="3" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            >

          <com.facebook.drawee.view.SimpleDraweeView
              android:layout_width="@dimen/dp_70"
              android:layout_height="@dimen/dp_70"
              android:background="@mipmap/my_back"
              android:layout_marginTop="@dimen/dp_20"
              android:layout_marginLeft="@dimen/dp_24"
              android:id="@+id/selecrt_cineam_logo"/>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="影院名字"
            android:textColor="#fff"
            android:layout_toRightOf="@id/selecrt_cineam_logo"
            android:layout_marginLeft="@dimen/dp_15"
                android:id="@+id/selecrt_cineam_yuanname"
            android:layout_marginTop="@dimen/dp_24"
            />
            <TextView
                android:id="@+id/selecrt_cineam_dizhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:text="影院名字影院名字影院名字影院名字影院名字影院名字"
                android:textColor="#fff"
                android:layout_marginRight="@dimen/dp_60"
                android:layout_toRightOf="@id/selecrt_cineam_logo"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@id/selecrt_cineam_yuanname"
                />
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@mipmap/com_icon_navigation_default_xhdpi"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_24"
                android:id="@+id/selecrt_cineam_dingwei"
               android:layout_alignParentRight="true"
                />
            <recycler.coverflow.RecyclerCoverFlow
                android:id="@+id/Cineam_recycler_flow_id"
                android:layout_width="match_parent"
                android:layout_below="@+id/selecrt_cineam_dizhi"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_height="match_parent"></recycler.coverflow.RecyclerCoverFlow>
        </RelativeLayout>

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_height="match_parent"
        android:id="@+id/selecrt_cineam_recycler"></android.support.v7.widget.RecyclerView>
</LinearLayout>
