<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/text_cinecism_layout_id"
        android:layout_marginTop="@dimen/dp_110"
        android:visibility="gone"
        android:background="@drawable/detail_relative_shape">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_20"
            android:id="@+id/re07">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="影评"
                android:id="@+id/text5"
                android:textSize="@dimen/sp_15"
                android:layout_marginBottom="@dimen/dp_5"/>
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_below="@id/text5"
                android:layout_height="@dimen/dp_3"
                android:background="@drawable/banner1_shape"/>
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:scaleType="fitXY"
                android:id="@+id/include_cinecism_back_id"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/com_icon_down_default_xhdpi"/>
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_70"
            android:id="@+id/include_cinecism_recycler_id"
            android:layout_marginLeft="@dimen/dp_20"></android.support.v7.widget.RecyclerView>
        <ImageView
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:src="@mipmap/com_icon_publish_default_hdpi"
            android:id="@+id/include_cinecism_comment_id"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/dp_20"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:id="@+id/edit_cinecism_relative_id"
            android:visibility="gone"
            android:gravity="center">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="@drawable/edit_shape"
                android:id="@+id/edit_cinecism_comment_id"
                android:layout_marginRight="@dimen/dp_90"
                android:gravity="top"
                android:layout_marginLeft="@dimen/dp_50"
                android:hint="请输入评论内容"
                android:padding="@dimen/dp_8"/>
            <TextView
                android:layout_alignParentRight="true"
                android:text="完成"
                android:background="@drawable/button_shape"
                android:id="@+id/edit_cinecism_over_id"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_50"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_100" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
